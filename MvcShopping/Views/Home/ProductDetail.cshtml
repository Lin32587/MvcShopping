@model MvcShopping.Models.Product
@{
    ViewBag.Title = "商品明细";
    var ajaxOption = new AjaxOptions()
    {
        OnSuccess = "AddToCartSuccess",
        OnFailure = "AddToCartFailure"
    };
}
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        function AddToCartSuccess() {
            alert('添加购物车成功');
        }
        function AddToCartFailure(xhr) {
            alert('添加购物车失败（HTTP状态代码：' + xhr.status + '）');
        }
    </script>
    }

<h2>您正在检视 @Model.Name</h2>

<fieldset>
    <legend>@Html.DisplayNameFor(m => m)</legend>
    <div class="display-2" style="font-size:2rem">
        <p><strong>@Html.DisplayNameFor(model => model.Description)</strong></p>
    </div>
    <div class="display-4"style="font-size:1.75rem">
        @Html.DisplayFor(model => model.Description)
    </div>

    <div class="display-2" style="font-size:2rem">
        <p><strong>@Html.DisplayNameFor(model => model.Price)</strong></p>
    </div>
    <div class="display-4"style="font-size:1.75rem">
        @Html.DisplayFor(model => model.Price)
    </div>

    <div class="display-2" style="font-size:2rem">
        <p><strong>@Html.DisplayNameFor(model => model.PublishOn)</strong></p>
    </div>
    <div class="display-4"style="font-size:1.75rem">
        @Html.DisplayFor(model => model.PublishOn)
    </div>
</fieldset>
<p style="margin-top:15px">@Ajax.ActionLink("添加购物车","AddToCart","Cart",ajaxOption)</p>
